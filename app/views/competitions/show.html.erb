<div id='header'>
  <h1><%= @competition.name %></h1>
</div>

<div id='attributes'>
  <p>Location: <%= @competition.location %></p>
  <p>Sport: <%= @competition.sport %></p>
  <p>Players Average Age: <%= @competition.players.average_age %></p>
</div>

<div id='teams'>
  <h2>Teams:</h2>
  <p><%= button_to "Register a new team", competition_teams_path(@competition.id), method: :post %></p>
  <% @competition.teams.each.with_index do |team, index| %>
    <div id="team-<%= team.id %>">
      <p><b>Team <%= index + 1 %></b></p>
      <p>Nickname: <%= team.nickname %></p>
      <p>Hometown: <%= team.hometown %></p>
    </div>
  <% end %>
</div>
